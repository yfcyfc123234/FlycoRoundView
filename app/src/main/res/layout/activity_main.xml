<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:ignore="HardcodedText">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/rtv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="TextView Default"
                android:textColor="#383838"
                app:rv_backgroundColor="#FFFFFF"
                app:rv_backgroundPressColor="#383838"
                app:rv_strokeColor="#383838"
                app:rv_strokeWidth="1dp"
                app:rv_textPressColor="#FFFFFF" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/rtv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingRight="18dp"
                android:paddingBottom="10dp"
                android:text="Radius Half Height"
                android:textColor="#03A9F4"
                app:rv_backgroundColor="#FFFFFF"
                app:rv_backgroundPressColor="#03A9F4"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isRippleEnable="false"
                app:rv_strokeColor="#03A9F4"
                app:rv_strokePressColor="#6D8FB0"
                app:rv_strokeWidth="1dp"
                app:rv_textPressColor="#FFFFFF" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:paddingTop="10dp"
            android:paddingRight="18dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text="TextView Radius 10dpTextView Radius 10dp"
            android:textColor="#383838"
            app:rv_backgroundColor="#F6CE59"
            app:rv_cornerRadius="10dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.flyco.roundview.RoundTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Radius TopLeft"
                android:textColor="#FFFFFF"
                app:rv_backgroundColor="#DE88A5"
                app:rv_cornerRadius_TL="10dp" />

            <com.flyco.roundview.RoundTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Radius TopRight"
                android:textColor="#FFFFFF"
                app:rv_backgroundColor="#F08A5D"
                app:rv_cornerRadius_TR="10dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.flyco.roundview.RoundTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Radius BottomLeft"
                android:textColor="#FFFFFF"
                app:rv_backgroundColor="#4AA0D5"
                app:rv_cornerRadius_BL="10dp" />

            <com.flyco.roundview.RoundTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Radius BottomRight"
                android:textColor="#FFFFFF"
                app:rv_backgroundColor="#7A9EAF"
                app:rv_cornerRadius_BR="10dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.flyco.roundview.RoundFrameLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            app:rv_backgroundColor="#009688"
            app:rv_cornerRadius="5dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FrameLayout"
                android:textColor="#FFFFFF" />
        </com.flyco.roundview.RoundFrameLayout>

        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingTop="10dp"
            android:paddingRight="18dp"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            app:rv_backgroundColor="#E45171"
            app:rv_cornerRadius="5dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="#FFFFFF"
                app:srcCompat="@mipmap/ic_portrait" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="LinearLayout"
                android:textColor="#FFFFFF" />
        </com.flyco.roundview.RoundLinearLayout>

        <com.flyco.roundview.RoundRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="18dp"
            android:paddingTop="10dp"
            android:paddingRight="18dp"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            app:rv_backgroundColor="#655989"
            app:rv_isRadiusHalfHeight="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_portrait"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:textColor="#FFFFFF"
                app:srcCompat="@mipmap/ic_portrait" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/iv_portrait"
                android:text="RelativeLayout"
                android:textColor="#FFFFFF" />
        </com.flyco.roundview.RoundRelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundLinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                app:rv_backgroundColor="#6D8FB0"
                app:rv_cornerRadius="5dp"
                app:rv_isWidthHeightEqual="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="#FFFFFF"
                    app:srcCompat="@mipmap/ic_portrait" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Width=Height"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </com.flyco.roundview.RoundLinearLayout>

            <com.flyco.roundview.RoundLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="18dp"
                android:textColor="#FFFFFF"
                app:rv_backgroundColor="#393E46"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="#FFFFFF"
                    app:srcCompat="@mipmap/ic_portrait" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Circle"
                    android:textColor="#FFFFFF" />
            </com.flyco.roundview.RoundLinearLayout>

            <com.flyco.roundview.RoundConstraintLayout
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="18dp"
                android:textColor="#FFFFFF"
                app:rv_backgroundColor="#393E46"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_rcl"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_rcl"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_portrait" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_rcl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Circle"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_rcl"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.flyco.roundview.RoundConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.flyco.roundview.RoundFrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:rv_cornerRadius="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_portrait" />
        </com.flyco.roundview.RoundFrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
